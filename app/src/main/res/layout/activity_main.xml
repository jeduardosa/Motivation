<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/linear_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_all_inclusive_24"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_emoji_emotions_24"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_wb_sunny_24"
            android:layout_weight="1"/>





    </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_menu"
                android:text="@string/ola_kotlin"
                android:layout_marginTop="32dp"
                android:textAlignment="center"

                />

            <TextView
                android:id="@+id/text_phrases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/frases"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_centerInParent="true"/>

            <View
                android:layout_width="128dp"
                android:layout_height="5dp"
                android:background="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/text_phrases"/>

            <Button
                android:id="@+id/btnFrase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nova Frase"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="32dp"
                android:textSize="18sp"
                />

</RelativeLayout>